@model MedChartBloodWork.Models.BloodWork

@{
    ViewData["Title"] = "AddBloodWork";
}

<h1>Add Your Blood Work</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddBloodWork">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                Date Created
                <input asp-for="DateCreated" class="form-control" />
                <span asp-validation-for="DateCreated" class="text-danger"></span>
            </div>
            <div class="form-group">
                Exam Date
                <input asp-for="ExamDate" class="form-control" />
                <span asp-validation-for="ExamDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                Result Date
                <input asp-for="ResultDate" class="form-control" />
                <span asp-validation-for="ResultDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                Description
                <textarea placeholder="Enter Description Here!" asp-for="Description" class="form-control" cols="30" rows="5"></textarea>
               
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                Hemoglobin
                <input asp-for="Hemoglobin" class="form-control" />
                <span asp-validation-for="Hemoglobin" class="text-danger"></span>
            </div>
            <div class="form-group">
                Hematocrit
                <input asp-for="Hematocrit" class="form-control" />
                <span asp-validation-for="Hematocrit" class="text-danger"></span>
            </div>
            <div class="form-group">
                White Blood Cell Count
                <input asp-for="WhiteBloodCellCount" class="form-control" />
                <span asp-validation-for="WhiteBloodCellCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                Red Blood Cell Count
                <input asp-for="RedBloodCellCount" class="form-control" />
                <span asp-validation-for="RedBloodCellCount" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-success">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
