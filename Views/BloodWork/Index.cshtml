@model IEnumerable<MedChartBloodWork.Models.BloodWork>

@{
    ViewData["Title"] = "Blood Work List";
}

<h1>List Of Blood Works</h1>

<p>
    <button type="button" class="btn btn-success"> <a asp-action="AddBloodWork">Create New Blood Work</a></button>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">
                Date Created
            </th>
            <th scope="col">
                Exam Date
            </th>
            <th scope="col">
                Result Date
            </th>
            <th scope="col">
                Description
            </th>
            <th scope="col">
                Hemoglobin
            </th>
            <th scope="col">
                Hematocrit
            </th>
            <th scope="col">
                White Blood Cell Count
            </th>
            <th scope="col">
                Red Blood Cell Count
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCreated)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExamDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ResultDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hemoglobin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hematocrit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WhiteBloodCellCount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RedBloodCellCount)
                </td>

                <td>
                   
                    <div class="btn-group" role="group" aria-label="Basic example">
                        <button type="button" class="btn btn-success btn-sm"><a asp-action="Edit" asp-route-id="@item.BloodWorkID">Edit</a></button>
                        <button type="button" class="btn btn-success btn-sm"> <a asp-action="Details" asp-route-id="@item.BloodWorkID">Details</a> </button>
                        <button type="button" class="btn btn-danger btn-sm"><a asp-action="Delete" asp-route-id="@item.BloodWorkID">Delete</a></button>
                       
                    </div>

                </td>
            </tr>
        }
    </tbody>
</table>
